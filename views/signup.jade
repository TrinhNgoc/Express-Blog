extends ./layout.jade

block signup_form
  div#signup_form
    div.row
      div.small-9.small-centered.columns
        form(action='/signup', method='post')
          div
            label
              | First Name:
            input(type='text', name='firstname')
          div
            label
              | Last Name:
            input(type='text', name='lastname')
          div
            label
              | Email:
            input(type='text', name='email')
          div
            label(for="password")
              | Password:
            input(type='password', name='password', id="password")
          div
            label(for="cpassword")
              | Confirm Password:
            input(type='password', name='cpassword', id="cpassword" onkeyup="checkPassword(); return false;")
            span#confirmMessage
          div
            button(type='submit') Sign Me Up!