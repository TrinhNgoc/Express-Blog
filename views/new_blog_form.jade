extends ./layout.jade



block new_post_form
  div.new_post
    form#new_post(action='/blog' method='post')
      label.form_labels(for="form_author") Author
      input#form_author(type='text' name="author")
      label.form_labels(for="form_title") Title
      input#form_title(type='text' name="title")
      label.form_labels(for="form_body") Blog Body
      textarea#form_body(form="new_post" name="body" rows=50)
      button(type='submit') Publish Blog 
